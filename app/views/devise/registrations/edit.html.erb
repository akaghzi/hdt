<div class="form-horizontal" role="form">
	<h3 class="text-muted">
		Profile:
	</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
	<%= devise_error_messages! %>

	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :email %>
		</div>
		<div class="col-sm-4">
			<h5 class="text-info"><%= current_user.email %><h5>
			</div>
		</div>

		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
		Currently waiting confirmation for: <%= resource.unconfirmed_email %>
		<% end %>

		<div class="form-group">
			<i class="text-danger">(leave blank if you don't want to change it)</i>
			<div class="col-sm-2 control-label">
				<%= f.label :password %> 
			</div>
			<div class="col-sm-4">
				<%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label :password_confirmation %>
			</div>
			<div class="col-sm-4">
				<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label "Default store" %>
			</div>
			<div class="col-sm-4">
				<%= f.collection_select :store_id, Store.order("name"), :id, :name, {prompt: "select an option"}, {class: "form-control"} %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label "Default brand" %>
			</div>
			<div class="col-sm-4">
				<%= f.collection_select(:brand_id, Brand.order("name"), :id, :name, {prompt: "select an option"}, {class: "form-control"}) %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label "Default Category" %>
			</div>
			<div class="col-sm-4">
				<%= f.collection_select :item_category_id, ItemCategory.order("name"), :id, :name, {prompt: "select an option"}, {class: "form-control"} %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label "Default unit of measure" %>
			</div>
			<div class="col-sm-4">
				<%= f.collection_select :unit_id, Unit.order("name"), :id, :name, {prompt: "select an option"}, {class: "form-control"} %>
			</div>
		</div>

		<div class="form-group">
			<i class="text-danger">(we need your current password to confirm your changes)</i>
			<div class="col-sm-2 control-label">
				<%= f.label :current_password %> 
			</div>
			<div class="col-sm-4">
				<%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
				<%= link_to "Cancel", root_path, class: "btn btn-warning btn-sm" %>
			</div>
		</div>
		<% end %>

	</div>