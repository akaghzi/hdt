<div class="form-horizontal" role="form">
	<%= form_for(@task) do |f| %>
	<% if @task.errors.any? %>
	<div class="text-danger">
		<h3><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h3>
		<ul>
			<% @task.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<%= f.hidden_field :user_id, class: "form-control" %>
	
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :target_date %>
		</div>
		<div class="col-sm-4">
			<%= f.date_field :target_date, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :detail %>
		</div>
		<div class="col-sm-4">
			<%= f.text_area :detail, rows: "6", class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
			<%= link_to "Cancel", tasks_path, class: "btn btn-warning btn-sm"%>
		</div>
	</div>
	<% end %>
</div>