<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Tasks:
		</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@task, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-3">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "task name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>			
		</div>                  
		<% end %>
	</div>	
</div>	

<% if @incompletetasks.blank? %>
<p>
	There are not tasks defined as yet.
</p>
<% else %>
<table class="table table-striped">
	<tr>
		<th>Task</th>
		<th>Taret date</th>
		<th>Detail</th>
	</tr>
	<% @incompletetasks.each do |task| %>
	<tr>
		<td><%= link_to task.name.titleize, task_path(task) %></td>
		<td><%= task.target_date.strftime("%d-%h-%Y") %></td>
		<td><%= task.detail %></td>
	</tr>
	<% end %>
</table>
<% end %>
<%= link_to 'Add task', new_task_path, class: "btn btn-primary btn-sm" %>
<%= link_to "Cancel", root_path, class: "btn btn-warning btn-sm"%>
