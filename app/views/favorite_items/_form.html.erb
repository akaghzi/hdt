<div class="form-horizontal" role="form">
	<%= form_for(@favorite_item) do |f| %>
	<% if @favorite_item.errors.any? %>
	<div class="alert alert-danger">
		<h4>
			<%= pluralize(@favorite_item.errors.count, "error") %> prohibited this list from being saved:
		</h4>
		<ul>
			<% @favorite_item.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= f.hidden_field :user_id %>
	
	<div class="form-group has-feedback">
		<div class="col-sm-2 control-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label "UPCode" %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :identifier, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :price %>
		</div>
		<div class="col-sm-4">
			<%= f.number_field :price, min: 0.1, step: 0.01, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :quantity %>
		</div>
		<div class="col-sm-4">
			<%= f.number_field :quantity, min: 0.1, step: 0.1, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :item_category_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select :item_category_id, ItemCategory.all, :id, :name, {prompt: "select an option"}, {class: "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :unit_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select(:unit_id, Unit.order("name"), :id, :name, {prompt: "select an option"}, {class: "form-control"}) %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :brand_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select :brand_id, Brand.order("name"),:id, :name, {prompt: "select an option"}, {class: "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
			<%= link_to "Cancel", favorite_items_path, class: "btn btn-warning btn-sm"%>
		</div>
	</div>
	<% end %>	
</div>