<div class="row">
	<div class="col-sm-3">
		<h3 class="text-muted">
			Favorite items' list:
		</h3>
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@favorite_item, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-4">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "item name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
<% if @favorite_items.blank? %>
<p>
	There are no items in the favorite items' list.
</p>
<% else %>
<table class="table table-striped">
	<tr>
		<th>Name</th>
		<th>Unit</th>
		<th>Quantity</th>
		<th>Price</th>
		<!-- <th>List type</th> -->
		<th>Item category</th>
		<th>Brand</th>
		<!-- <th>UPCode</th> -->
		<th>Action</th>
	</tr>
	<% @favorite_items.each do |favorite_item| %>
	<tr>
		<td><%= link_to favorite_item.name, edit_favorite_item_path(favorite_item), class: "link" %></td>
		<td><%= favorite_item.unit.name %></td>
		<td><%= favorite_item.quantity %></td>
		<td>
			<% if favorite_item.price.nil? %>
			<span class="badge">?</span>
			<% else %>
			<%= favorite_item.price %>
			<% end %>
		</td>
		<!-- <td><%#= favorite_item.list_type.name %></td> -->
		<td><%= favorite_item.item_category.name %></td>
		<td><%= favorite_item.brand.name %></td>
		<!-- <td><%#= favorite_item.identifier %></td> -->
		<td>
			<%= link_to 'Copy', favorite_item_copyitem_path(favorite_item), class: "btn btn-info btn-xs" %>
			<%= link_to 'Delete', favorite_item, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
	</tr>
	<% end %>
</table>

<% end %>
<%= link_to 'Add item', new_favorite_item_path, class: "btn btn-primary btn-sm", role: "button" %>
<% if @favorite_items.count >= 1 %>
  <%= link_to 'Copy All', copyallitems_path, class: "btn btn-success btn-sm", role: "button", data: {confirm: "are you sure?"}%>
<% end %>