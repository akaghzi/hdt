<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Foods:
		</h3>
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@fd_desc, method: "get" ) do %>
		<div class="form-group">
			<div class="col-sm-4">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "food name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
<div class="panel panel-info">
	<div class="panel-heading">
		<h3 class="panel-title">
			Food Description:
		</h3>
	</div>
	<% if @fd_descs.blank? %>
	<div class="panel-body">
		<p>
			Food item not found.
		</p>
	</div>
	<% else %>
	<table class="table table-condensed">
		<tr>
			<th>NDB#</th>
			<th>Food Group</th>
			<th>Long Description</th>
		</tr>
		<% @fd_descs.each do |fd_desc| %>
		<tr>
			<td><%= link_to fd_desc.ndb_no, ndb_food_path(fd_desc.ndb_no) %></td>
			<td><%= fd_desc.fd_group.fdgrp_desc %></td>
			<td><%= fd_desc.long_desc.capitalize %></td>
		</tr>
		<% end %>
	</table>
	<% end %>
	<div class="panel-footer">
	</div>
</div>