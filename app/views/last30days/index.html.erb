<h3 class="text-muted">Last 30 days:</h3>
<!-- ***********  BY STORE ***************** -->
<div class="col-sm-4">
	<div class="panel panel-info">
		<!-- Default panel contents -->
		<div class="panel-heading">
			<h4>
				Purchases by store
			</h4>
		</div>
		<div class="panel-body">
		</div>
		<% if @last30daysbystore.blank? %>
		<p>
			No record found.
		</p>
		<% else %>
		<table class="table table-striped">
			<tr>
				<th>Store</th>
				<th>Total</th>
			</tr>
			<% @last30daysbystore.each do | store| %>
			<tr>
				<td><%= store.store.name.titleize %></td>
				<td><%= store.totalprice %></td>
			</tr>
			<% @totalprice = @totalprice + store.totalprice %>
			<% end %>	
		</table>	
		<% end %>
		<div class="panel-footer">
			<h4 class="text-right">
				<span class="label label-info">
				Total <%= @totalprice %>
				<% @totalprice = 0.00 %>
			</span>
			</h4>		
		</div>
	</div>
</div>
