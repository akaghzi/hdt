<div class="form-horitontal" role="form">
	<%= form_for(@list) do |f| %>
	<% if @list.errors.any? %>
	<div class="text-danger">
		<h4>
			<%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:
		</h4>
		<ul>
			<% @list.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= f.hidden_field :user_id %>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :identifier %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :identifier, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :price %>
		</div>
		<div class="col-sm-4">
			<%= f.number_field :price, minimum: "0.01", class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :quantity %>
		</div>
		<div class="col-sm-4">
			<%= f.number_field :quantity, minimum: "0.1", class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :favorite %>
		</div>
		<div class="col-sm-4">
			<%= f.check_box :favorite, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :list_type_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select(:list_type_id, ListType.all, :id, :name, class: "form-control") %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :item_category_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select(:item_category_id, ItemCategory.all, :id, :name, class: "form-control") %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :unit_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select(:unit_id, Unit.order("name"), :id, :name, class: "form-control") %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :store_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select(:store_id, Store.order("name"), :id, :name, class: "form-control") %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :brand_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select(:brand_id, Brand.order("name"),:id, :name, class: "form-control") %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.submit "submit", class: "btn btn-primary btn-sm" %>
		</div>
	</div>
	<% end %>
</div>