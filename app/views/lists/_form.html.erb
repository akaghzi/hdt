<div class="form-horitontal" role="form">
	<%= form_for(@list) do |f| %>
	<% if @list.errors.any? %>
	<div class="text-danger">
		<h4>
			<%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:
		</h4>
		<ul>
			<% @list.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

			<%= f.hidden_field :user_id %>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :list_type_id %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.collection_select :list_type_id, ListType.all, :id, :name %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :item_category_id %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.collection_select :item_category_id, ItemCategory.all, :id, :name %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :unit_id %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.collection_select :unit_id, Unit.order("name"), :id, :name %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :store_id %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.collection_select :store_id, Store.order("name"), :id, :name %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :brand_id %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.collection_select :brand_id, Brand.order("name"),:id, :name %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :name %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.text_field :name %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :identifier %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.text_field :identifier %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :price %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.text_field :price %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :quantity %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.text_field :quantity %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :favorite %>
		</div>
		<div class="input-group input-group-lg">
			<%= f.check_box :favorite %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.submit %>
		</div>
	</div>
	<% end %>
</div>