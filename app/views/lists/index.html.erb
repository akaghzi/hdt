<div class="pull-right">
	<div class-"form-inline" role="form">
		<%= form_tag(@list, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-10">
				<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "item ...", class: "form-control" %>
			</div>
		</div>                  
		<div class="form-group">
			<div class="col-sm-1">
				<%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
			</div>
		</div>
		<% end %>
	</div>	
</div>
<h3 class="text-muted">
	Shopping list:
</h3>
<div class="table">
	<table class="table-hover">
		<tr>
			<th>List type</th>
			<th>Item category</th>
			<th>Unit</th>
			<th>Store</th>
			<th>Brand</th>
			<th>Name</th>
			<th>Identifier</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Action</th>
		</tr>
		<% @lists.each do |list| %>
		<tr>
			<td><%= list.list_type.name %></td>
			<td><%= list.item_category.name %></td>
			<td><%= list.unit.name %></td>
			<td><%= list.store.name %></td>
			<td><%= list.brand.name %></td>
			<td><%= link_to list.name, edit_list_path(list), class: "link" %></td>
			<td><%= list.identifier %></td>
			<td><%= list.price %></td>
			<td><%= list.quantity %></td>
			<td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</table>
	
</div>

<br>

<%= link_to 'New List', new_list_path, class: "btn btn-primary btn-sm" %>
