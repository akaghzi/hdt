<div class="form-horizontal" role="form">
	<%= form_for(@store) do |f| %>
	<% if @store.errors.any? %>
	<div class="alert alert-danger">
		<h4><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h4>
		<ul>
			<% @store.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
			<%= link_to "Cancel", stores_path, class: "btn btn-warning btn-sm"%>
		</div>
	</div>
	<% end %>
</div>