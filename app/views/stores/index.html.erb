<div class="pull-right">
	<div class-"form-inline" role="form">
		<%= form_tag(@store, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-10">
				<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "store ...", class: "form-control" %>
			</div>
		</div>                  
		<div class="form-group">
			<div class="col-sm-1">
				<%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
			</div>
		</div>
		<% end %>
	</div>	
</div>
<h3 class="text-muted">
	Stores:
</h3>
<div class="table">
	<table class="table-hover">
		<% @stores.each do |store| %>
		<tr>
			<td>
				<span class="glyphicon glyphicon-minus"></span>
				<%= store.name.titleize %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
<%= link_to 'New Store', new_store_path, class: "btn btn-primary btn-sm" %>
