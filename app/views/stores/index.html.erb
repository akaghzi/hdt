<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Stores:
		</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@store, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-3">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "store name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
	
<table class="table table-striped">
	<% @stores.each do |store| %>
	<tr>
		<td>
			<%= store.name.titleize %>
		</td>
	</tr>
	<% end %>
</table>
<i class="text-danger">Add your favorite store here if it is not listed already</i>
<%= link_to 'Add store', new_store_path, class: "btn btn-primary btn-sm" %>
<%= link_to "Cancel", root_path, class: "btn btn-warning btn-sm"%>
