<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Products:
		</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@product, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-3">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "UPC", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
<h4 class="text-info">
	Latest 10 products:
</h4>

<% if @products.blank? %>
<p>
	Product not found in our database, please add it if you like.
</p>
<% else %>
<table class="table table-striped">
	<tr>
		<th>UPC</th>
		<th>Detail</th>
		<th>Action</th>
	</tr>
	<% @products.each do |product| %>
	<tr>
		<td>
			<%= product.identifier %>
		</td>
		<td>
			<% if product.detail.nil? %>
			Product description not found in database, try lookup
			<% else %>
			<%= JSON.parse(product.detail)['description'] %>
			<% end %>
		</td>
		<td>
			<% if product.detail.nil? %>
			<%= link_to "Lookup", product_lookup_path(product), class: "btn btn-info btn-xs" %>
			<% else %>
			<%= link_to "Show", product_path(product), class: "btn btn-success btn-xs" %>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>
<% end %>
<i class="text-danger">Add your favorite product here if it is not listed already</i>
<%= link_to 'Add product', new_product_path, class: "btn btn-primary btn-sm" %>
<%= link_to "Cancel", root_path, class: "btn btn-warning btn-sm"%>