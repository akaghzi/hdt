<div class="form-horizontal" role="form">
	<%= form_for(@contractor) do |f| %>
	<% if @contractor.errors.any? %>
	<div class="alert alert-danger">
		<h4><%= pluralize(@contractor.errors.count, "error") %> prohibited this contractor from being saved:</h4>
		<ul>
			<% @contractor.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<%= f.hidden_field :user_id %>
	
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :phone %>
		</div>
		<div class="col-sm-4">
			<%= f.telephone_field :phone, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :fax %>
		</div>
		<div class="col-sm-4">
			<%= f.telephone_field :fax, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :email %>
		</div>
		<div class="col-sm-4">
			<%= f.email_field :email, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :description %>
		</div>
		<div class="col-sm-4">
			<%= f.text_area :description, rows: "6", class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
			<%= link_to "Cancel", contractors_path, class: "btn btn-warning btn-sm"%>
		</div>
	</div>
	<% end %>
</div>