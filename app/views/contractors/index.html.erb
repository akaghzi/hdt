<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Contractors:
		</h3>
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@contractor, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-4">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "contractor name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
						<%= link_to glyph("plus-sign"), new_contractor_path, class: "btn btn-success" %>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
<div class="panel panel-info">
	<div class="panel-heading">
		<h3 class="panel-title">
			Latest 10 contractors:
		</h3>
	</div>
	<% if @contractors.blank? %>
	<div class="panel-body">
		<p>
			Empty.
		</p>
	</div>
	<% else %>
	<table class="table table-condensed">
		<tr>
			<th>Name</th>
		</tr>
		<% @contractors.each do |contractor| %>
		<tr>
			<td>
				<%= contractor.name %>
			</td>
		</tr>
		<% end %>
	</table>
	<% end %>
	<div class="panel-footer">
		<i class="text-danger">Add your favorite contractor here if it is not listed already</i>
		<%= link_to glyph("plus"), new_contractor_path, class: "btn btn-success" %>
	</div>
</div>