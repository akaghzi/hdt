<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Contractors:
		</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@contractor, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-3">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "contractor name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
<% if @contractors.blank? %>
<p>There are no contractors listed by you.</p>
<% else %>
<table class="table table-striped">
	<tr>
		<td>Name</td>
		<td>Phone</td>
		<td>Email</td>
		<td>Description</td>
		<td>Action</td>
	</tr>
	<% @contractors.each do |contractor| %>
	<tr>
		<td>
			<%= contractor.name.titleize %>
		</td>
		<td>
			<%= contractor.phone %>
		</td>
		<td>
			<%= contractor.email.downcase %>
		</td>
		<td>
			<%= contractor.description %>
		</td>
		<td>
			<%= link_to "Edit", edit_contractor_path(contractor), class: "btn btn-default btn-xs" %>
		</td>
	</tr>
	<% end %>
</table>
<% end %>
<i class="text-info">Add your favorite contractor here if it is not listed already</i>
<%= link_to glyph("plus-sign"), new_contractor_path, class: "btn btn-success" %>
<%= link_to glyph("arrow-left"), root_path, class: "btn btn-warning"%>
