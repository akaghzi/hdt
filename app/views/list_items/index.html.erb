<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Shopping:
		</h3>
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@list_item, method: "get" ) do %>
		<div class="form-group">
			<div class="col-sm-4">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, autocomplete: "off", placeholder: "item name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
						<%= link_to glyph("plus-sign"), new_list_item_path, class: "btn btn-success" %>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>
<%= render :partial => 'incomplete' %>
<%= render :partial => 'basketed' %>
<%= render :partial => 'completed' %>