<div class="form-horizontal" role="form">
	<%= form_for(@rental) do |f| %>
	<% if @rental.errors.any? %>
	<div class="text-danger">
		<h4>
			<%= pluralize(@rental.errors.count, "error") %> prohibited this rental from being saved:
		</h4>
		<ul>
			<% @rental.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<%= f.hidden_field :task_id %>
	
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :description %>
		</div>
		<div class="col-sm-4">
			<%= f.text_area :description, rows: "6", class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :store_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select(:store_id, Store.order("name"), :id, :name, {prompt: "select an option"}, {class: "form-control"}) %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :price %>
		</div>
		<div class="col-sm-4">
			<%= f.number_field :price, step: 1, minimum: 1, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
			<%= link_to "Cancel", rentals_path, class: "btn btn-warning btn-sm"%>
		</div>
	</div>
	<% end %>
</div>