<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Vendors:
		</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@rental, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-3">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "rental name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
<% if @rentals.blank? %>
<p>There are no rentals listed by you.</p>
<% else %>
<table class="table table-striped">
	<tr>
		<td>Name</td>
		<td>Description</td>
		<td>Store</td>
		<td>Price</td>
		<td>Action</td>
	</tr>
	<% @rentals.each do |rental| %>
	<tr>
		<td>
			<%= rental.name.titleize %>
		</td>
		<td>
			<%= rental.store.name.titleize %>
		</td>
		<td>
			<%= rental.description %>
		</td>
		<td>
			<%= rental.price %>
		</td>
		<td>
			<%= link_to "Edit", edit_rental_path(rental), class: "btn btn-default btn-xs" %>
		</td>
	</tr>
	<% end %>
</table>
<% end %>
<i class="text-danger">Add your favorite rental here if it is not listed already</i>
<%= link_to 'Add rental', new_rental_path, class: "btn btn-primary btn-sm" %>
<%= link_to "Cancel", root_path, class: "btn btn-warning btn-sm"%>
