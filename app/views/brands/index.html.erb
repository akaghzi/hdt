<div class="row">
	<div class="col-sm-2">
<h3 class="text-muted">
	Brands:
</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@brand, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-4">
				<div class="input-group">
				<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "brand name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					  <%= link_to glyph("plus-sign"), new_brand_path, class: "btn btn-success" %>
				</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	

<table class="table table-striped">
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name.titleize %></td>
      </tr>
    <% end %>
</table>

<i class="text-info">Add your favorite brand here if it is not listed already</i>
<%= link_to glyph("plus-sign"), new_brand_path, class: "btn btn-success" %>

