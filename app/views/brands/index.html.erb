<div class="row">
	<div class="col-sm-2">
<h3 class="text-muted">
	Brands:
</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@brand, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-3">
				<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "brand name", class: "form-control" %>
			</div>
				
		</div>
		<div class="form-group">
			<%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
		</div>
		<% end %>
	</div>		
</div>

<table class="table table-striped">
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'Add brand', new_brand_path, class: "btn btn-primary btn-sm" %>
