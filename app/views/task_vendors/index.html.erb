<h1>Listing task_vendors</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Vendor</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_vendors.each do |task_vendor| %>
      <tr>
        <td><%= task_vendor.task %></td>
        <td><%= task_vendor.vendor %></td>
        <td><%= task_vendor.price %></td>
        <td><%= link_to 'Show', task_vendor %></td>
        <td><%= link_to 'Edit', edit_task_vendor_path(task_vendor) %></td>
        <td><%= link_to 'Destroy', task_vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

