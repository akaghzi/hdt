<div class="form-horizontal" role="form">
	<%= form_for(@task_contractor) do |f| %>
	<% if @task_contractor.errors.any? %>
	<div class="alert alert-danger">
		<h4><%= pluralize(@task_contractor.errors.count, "error") %> prohibited this task_contractor from being saved:</h4>
		<ul>
			<% @task_contractor.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	
	<%= f.hidden_field :task_id %>
	
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :contractor_id %>
		</div>
		<div class="col-sm-4">
			<%= f.collection_select :contractor_id, @contractors, :id, :name , {prompt: "select an option" }, {class: "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :job_detail %>
		</div>
		<div class="col-sm-4">
			<%= f.text_area :job_detail, rows: "6", class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 form-label">
			<%= f.label :price %>
		</div>
		<div class="col-sm-4">
			<%= f.number_field :price, step: 0.01, minimum: 1, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
			<%= link_to "Cancel", task_path(@task_contractor.task_id), class: "btn btn-warning btn-sm"%>
		</div>
	</div>
	<% end %>
</div>