<div class="row">
	<div class="col-sm-2">
		<h3 class="text-muted">
			Vendors:
		</h3>
		
	</div>
	<div class-"form-inline" role="form">
		<%= form_tag(@vendor, method: "get", ) do %>
		<div class="form-group">
			<div class="col-sm-3">
				<div class="input-group">
					<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "vendor name", class: "form-control" %>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</div>				
		</div>                  
		<% end %>
	</div>	
</div>	
<% if @vendors.blank? %>
<p>There are no vendors listed by you.</p>
<% else %>
<table class="table table-striped">
	<tr>
		<td>Name</td>
		<td>Phone</td>
		<td>Email</td>
		<td>Action</td>
	</tr>
	<% @vendors.each do |vendor| %>
	<tr>
		<td>
			<%= vendor.name.titleize %>
		</td>
		<td>
			<%= vendor.phone %>
		</td>
		<td>
			<%= vendor.email.downcase %>
		</td>
		<td>
			<%= link_to "Edit", edit_vendor_path(vendor), class: "btn btn-default btn-xs" %>
		</td>
	</tr>
	<% end %>
</table>
<% end %>
<i class="text-danger">Add your favorite vendor here if it is not listed already</i>
<%= link_to 'Add vendor', new_vendor_path, class: "btn btn-primary btn-sm" %>
<%= link_to "Cancel", root_path, class: "btn btn-warning btn-sm"%>
