	<div class="text-danger">
		<h2><%= pluralize(@item_category.errors.count, "error") %> prohibited this item_category from being saved:</h2>
		<ul>
			<% @item_category.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
